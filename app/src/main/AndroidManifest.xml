<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.workdoRoom">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_bg_round"
        android:label="WorkDoRoom"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkDo">
        <activity android:name="com.example.workdoRoom.DisplayDetailActivity"
            android:parentActivityName="com.example.workdoRoom.MainActivity">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.workdoRoom.MainActivity" />
        </activity>
        <activity
            android:name="com.example.workdoRoom.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.WorkDo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>